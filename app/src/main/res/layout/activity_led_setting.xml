<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/blue_0188cc">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="back"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="LED Settings"
            android:textColor="@color/white_ffffff"
            android:textSize="18sp" />


        <View
            style="@style/divider_line"
            android:layout_alignParentBottom="true"
            android:background="@color/grey_999999" />
    </RelativeLayout>


    <CheckBox
        android:id="@+id/cb_ble_broadcast"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:button="@null"
        android:drawableLeft="@drawable/radiobtn_conn"
        android:drawablePadding="10dp"
        android:paddingLeft="24dp"
        android:text="Enable LED when bluetooth broadcasting" />

    <CheckBox
        android:id="@+id/cb_ble_connected"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:button="@null"
        android:drawableLeft="@drawable/radiobtn_conn"
        android:drawablePadding="10dp"
        android:paddingLeft="24dp"
        android:text="Enable LED when bluetooth connected" />

    <CheckBox
        android:id="@+id/cb_server_connecting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:button="@null"
        android:drawableLeft="@drawable/radiobtn_conn"
        android:drawablePadding="10dp"
        android:paddingLeft="24dp"
        android:text="Enable LED when WIFI and server connecting" />

    <CheckBox
        android:id="@+id/cb_server_connected"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:button="@null"
        android:drawableLeft="@drawable/radiobtn_conn"
        android:drawablePadding="10dp"
        android:paddingLeft="24dp"
        android:text="Enable LED when server connected" />


    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="53dp"
        android:background="@drawable/shape_corner_btn_bg"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white_ffffff"
        android:textSize="18sp" />
</LinearLayout>
